<div align="center">

</div>
<div id="content" class="site-content container">
  <main id="main" class="site-main" role="main">
  	<div class="blog-post">
    <h2 class="content-title">Send us a message</h2>
    <hr>
    <hr>
      <div class="row" id="contact-row">
        <div class="large-6 large-offset-3 small-6 small-offset-3 large-6 medium-offset-3 columns float-middle">
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
  <div class="row">
  <div class="large-6 columns name">
    <%= f.input :name, :required => true %>
  </div>
  <div class="large-6 columns">
    <%= f.input :email, :required => true %>
  </div>
  </div>
  <div class="row">
  <div class="large-12 columns">
    <%= f.input :message, :as => :text, :required => true %>
  </div>
  </div>
    <div class= "hidden" style="display: none;">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %> 
        </div>
      </div>

    </div>
	</main>
</div>
